<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DarkAccent" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- ******************************-Text Styles******************************************* -->


    <style name="textAppearance.customHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textAppearance.customHeadline" parent="textAppearance.customHeadline4">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="textAppearance.customHeadline3" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="textAppearance.main.RV" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="textAppearance.main.Header" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="textAppearance.customHeadline7" parent="textAppearance.customHeadline3">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textAppearance.customHeadline6" parent="textAppearance.customHeadline3">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>


    <style name="textAppearance.text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textSize">13sp</item>

        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="textAppearance.text.RV.desc" parent="textAppearance.text">
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textAppearance.text.RV.loc" parent="textAppearance.text.RV.desc">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="textAppearance.text.desc" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="textAppearance.text.bold" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="textAppearance.text.Large" parent="textAppearance.text">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="textAppearance.nav" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <style name="textAppearance.text2" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- ******************************End - Text Styles******************************************* -->


    <!-- ******************************-Bottom Navigation Styles******************************************* -->


    <style name="MaterialComponents.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/quicksand</item>
        <item name="itemTextAppearance">@style/textAppearance.nav</item>

    </style>


    <!-- ******************************End - Bottom Navigation Styles******************************************* -->



    <!-- ******************************Button Styles******************************************* -->


    <style name="Button.CustomPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/bg_selector_primary</item>
        <item name="rippleColor">@color/textColorPrimary</item>
    </style>

    <style name="Button.Cancel" parent="Button.CustomPrimary">
        <item name="backgroundTint">@color/bg_selector_red</item>
    </style>

    <style name="Button.CustomSecondary" parent="Button.CustomPrimary">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="backgroundTint">@color/bg_selector_secondary</item>
    </style>

    <style name="Button.CustomCurved" parent="Button.CustomPrimary">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/quicksand_light</item>
    </style>

    <style name="Button.Transparent.NoOutline" parent="Button.Transparent">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@animator/animator_button</item>
    </style>

    <style name="Button.Transparent" parent="Button.CustomPrimary">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
        <item name="strokeWidth">0.1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/colorPrimaryLight</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="paddingStart">16dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@animator/animator_button</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Button.Transparent.NoOutline">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <!-- ******************************End - Button Styles******************************************* -->



    <!-- ******************************EditText Styles******************************************* -->


    <style name="TextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="android:textAppearance">@style/textAppearance.text</item>
        <item name="errorEnabled">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="TextBox.Dark" parent="TextBox">
        <item name="boxStrokeColor">@color/edit_color_dark</item>
    </style>

    <style name="TextBox.Round" parent="TextBox">
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
    </style>

    <style name="AppTheme.SpinnerTextBox.Dark" parent="AppTheme.SpinnerTextBox">
        <item name="boxStrokeColor">@color/edit_color_dark</item>
        <item name="materialThemeOverlay">@style/AppTheme.SpinnerTextBox.MaterialThemeOverlay.Dark</item>
    </style>

    <style name="AppTheme.SpinnerTextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="materialThemeOverlay">@style/AppTheme.SpinnerTextBox.MaterialThemeOverlay</item>
    </style>

    <style name="AppTheme.SpinnerTextBox.Round" parent="AppTheme.SpinnerTextBox">
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
    </style>

    <style name="AppTheme.SpinnerTextBox.MaterialThemeOverlay" parent="AppTheme">
        <item name="colorSurface">@color/colorPrimaryLight</item>
        <item name="autoCompleteTextViewStyle">@style/AppTheme.SpinnerTextBox.AutocompleteTextView</item>
    </style>

    <style name="AppTheme.SpinnerTextBox.MaterialThemeOverlay.Dark" parent="AppTheme">
        <item name="colorSurface">@color/lightGrey</item>
        <item name="autoCompleteTextViewStyle">@style/AppTheme.SpinnerTextBox.AutocompleteTextView</item>
    </style>

    <style name="AppTheme.SpinnerTextBox.AutocompleteTextView">
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- ******************************End - EditText Styles******************************************* -->


</resources>
