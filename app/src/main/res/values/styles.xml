<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <style name="textAppearance.customHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textAppearance.text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Button.CustomPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/textColorPrimary</item>
    </style>

    <style name="Button.CustomSecondary" parent="Button.CustomPrimary">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_color</item>
    </style>

</resources>
